<h1>Edit Broadway Play</h1>

<%= simple_form_for @play, html: {multipart: true} do |f| %>
  <%= f.file field :play_img %>
  <%= f.select :category_id, @categories %>
  <%= f.input :title, label: 'Show Title' %>
  <%= f.input :description, placeholder: 'Show in a glimpse' %>
  <%= f.input :director, hint: 'Input at least one director.' %>
  <%= f.button :submit %>
<% end %>