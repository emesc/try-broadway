<%= simple_form_for @play do |f| %>
  <%= select_tag(:category_id, options_for_select(@categories), prompt: 'Select Category') %>
  <%= f.file_field :play_img %>
  <%= f.input :title, label: 'Show Title' %>
  <%= f.input :description, placeholder: 'Show in a glimpse' %>
  <%= f.input :director, hint: 'Input at least one director.' %>
  <%= f.button :submit %>
<% end %>